<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/global_color_blue_primary</item>
        <item name="colorPrimaryDark">@color/global_color_blue_primary_dark</item>
        <item name="colorAccent">@color/color_cd_accent</item>
        <item name="colorAccentDark">@color/color_cd_accent_dark</item>
        <item name="colorSuccess">@color/color_cd_success</item>
        <item name="colorComplementary">@color/color_cd_complementary</item>
        <item name="android:colorForeground">@color/global_color_primary_dark</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.MyTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Card" parent="CardView.Light">
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardTextTitle" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/global_color_blue_primary</item>
        <item name="android:textSize">@dimen/global_text_size_headline</item>
    </style>

    <style name="CardTextTaking" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/global_color_blue_primary_dark</item>
        <item name="android:textSize">@dimen/global_text_size_title</item>
    </style>

    <style name="CardText" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/global_text_secondary</item>
        <item name="android:textSize">@dimen/global_text_size_body_1</item>
    </style>

    <style name="CardTextWarning" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/global_text_error</item>
        <item name="android:textSize">@dimen/global_text_size_caption</item>
    </style>

    <style name="Button" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="DialogTextTitle" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/global_color_blue_primary_dark</item>
        <item name="android:textSize">@dimen/global_text_size_body_1</item>
    </style>

    <style name="TextButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minHeight">@dimen/global_spacing_xxs</item>
        <item name="android:minWidth">@dimen/global_spacing_xs</item>
        <item name="android:textSize">@dimen/global_text_size_click_item</item>
        <item name="android:textColor">@color/color_cd_success</item>
    </style>

</resources>