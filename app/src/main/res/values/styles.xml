<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/global_color_blue_primary</item>
        <item name="colorPrimaryDark">@color/global_color_blue_primary_dark</item>
        <item name="colorAccent">@color/color_cd_accent</item>
        <item name="colorAccentDark">@color/color_cd_accent_dark</item>
        <item name="colorSuccess">@color/color_cd_success</item>
        <item name="colorComplementary">@color/color_cd_complementary</item>
        <item name="android:colorForeground">@color/color_text_primary</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:textColorPrimary">@color/color_text_primary</item>
        <item name="android:textColorSecondary">@color/color_text_secondary</item>
        <item name="android:textColorHint">@color/color_text_primary</item>
        <item name="android:textColorHintInverse">@color/color_text_primary</item>
    </style>

    <style name="Widget.MyTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Card" parent="CardView.Light">
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="CardTextTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/global_color_blue_primary</item>
        <item name="android:textSize">@dimen/global_text_size_headline</item>
    </style>

</resources>